// Baseline config for all tsc-built packages
// Your package tsconfig should extend from this one
{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "target": "es2017",
    "module": "commonjs",
    "jsx": "react",
    "typeRoots": ["./node_modules/@types", "types"],
    "moduleResolution": "node"
  }
}
